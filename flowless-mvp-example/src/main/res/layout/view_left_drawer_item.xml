<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/left_drawer_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/drawer_button_selector"
                android:clickable="true"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/left_drawer_item_divider"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_4sdp">

            <com.zhuinden.examplegithubclient.util.GlideImageView
                android:id="@+id/left_drawer_item_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_8sdp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/left_drawer_item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:textColor="@color/icons"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>

    <View
        android:id="@+id/left_drawer_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"/>
</RelativeLayout>