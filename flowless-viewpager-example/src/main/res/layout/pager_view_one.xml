<?xml version="1.0" encoding="utf-8"?>
<com.zhuinden.flowless_viewpager_example.PagerViewOne xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/pager_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Welcome to Pager View One!"/>

    <EditText
        android:id="@+id/pager_edittext"
        android:layout_below="@+id/pager_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pager_textview"
        android:layout_alignRight="@+id/pager_textview"/>
</com.zhuinden.flowless_viewpager_example.PagerViewOne>